<%- include('page_header') %>
    <div class="container mt-3">
        <div class="row">
            <% products.forEach((product)=> { %>
                <div class="col-xl-2 col-lg-3 col-md-4 col-sm-6 col-xs-12">
                    <div class="card">
                        <img src="images/<%= product.img %>" class="card-img-top" height="200px">
                        <div class="card-body">
                            <div>
                                <%= product.name %>
                            </div>
                            <div class="text-center text-bold text-info">
                                <%= product.price %>
                            </div>
                            <div class="text-center">
                                <a href="/addtoCart/<%= product.id %>" class="btn btn-info mt-2">
                                    <span class="material-symbols-outlined icons">
                                        shopping_cart
                                        </span>
                                    Add
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
                <% }) %>
        </div>
    </div>

    <%- include('page_footer') %>