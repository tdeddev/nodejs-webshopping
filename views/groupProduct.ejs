<%- include('header') %>
    <div class="container mt-3">
        <div class="card mt-3">
            <div class="card-body">
                <div class="card-title">
                    ประเภทสินค้า
                </div>
                <div class="mt-3">
                    <a href="/addGroupProduct" class="btn btn-info">
                        <span class="material-symbols-outlined icons">
                            add
                        </span>
                        เพิ่มรายการ
                    </a>
                </div>
                <table class="table table-bordered table-stripad mt-3">
                    <thead>
                        <th width="180px">Edit, Delete</th>
                        <th>ชื่อกลุ่มสินค้า</th>
                    </thead>
                    <tbody>
                        <% datas.forEach((data)=> { %>
                            <tr>
                                <td>
                                    <a class="btn btn-info" href="editGroupProduct/<%= data.id %>">
                                        <span class="material-symbols-outlined icons">
                                            Edit
                                          </span>
                                        </a>
                                    <a class="btn btn-danger" href="deleteGroupProduct/<%= data.id %>">
                                        <span class="material-symbols-outlined icons">
                                            close
                                          </span>
                                        </a>
                                </td>
                                <td>
                                    <%= data.name %>
                                </td>
                            </tr>
                            <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <%- include('footer') %>