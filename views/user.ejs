<%- include('header') %>
    <div class="container mt-3">
        <div class="card">
            <div class="card-body">
                <div class="card-title">
                    <span class="material-symbols-outlined icons">
                        person
                      </span>
                    ผู้ใช้งานระบบ
                </div>
                <div>
                    <a href="/addUser" class="btn btn-info">
                        <span class="material-symbols-outlined icons">
                            add
                          </span>
                          เพิ่มรายการ
                    </a>
                    <table class="table table-bordered table-striped mt-3">
                        <thead>
                            <tr>
                                <th width="140px"></th>
                                <th >ชื่อ</th>
                                <th width="200px">Username</th>
                                <th width="20px">ระดับ</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% users.forEach((user) => { %>
                                <tr>
                                    <td>
                                        <a class="btn btn-info" href="/editUser/<%= user.id %>">
                                            <span class="material-symbols-outlined icons">
                                                Edit
                                              </span>
                                            </a>
                                        <a class="btn btn-danger" href="/delete/<%= user.id %>">
                                            <span class="material-symbols-outlined icons">
                                                close
                                              </span>
                                            </a>
                                    </td>
                                    <td><%= user.name %></td>
                                    <td><%= user.usr %></td>
                                    <td><%= user.level %></td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
                <% if(session.message != undefined) { %> 
                <div class="mt-3 alert alert-success">
                    <%= session.message %>
                    <%= session.message = undefined %>
                </div>
                <% } %>
            </div>
        </div>
    </div>

<%- include('footer') %>
