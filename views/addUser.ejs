<%- include('header') %>

    <form method="post" class="container mt-3">
        <div class="card">
            <div class="card-body">
                <div class="card-title">
                    <span class="material-symbols-outlined icons">
                        person
                      </span>
                    เพิ่มผู้ใช้งาน
                </div>
                <div class="mt-3">
                    <label for="">ชื่อ</label>
                    <input type="text" name="name" id="" class="form-control" value="<%= user.name %>">
                </div>
                <div class="mt-3">
                    <label for="">ไอดีผู้ใช้งาน</label>
                    <input type="text" name="usr" id="" class="form-control" value="<%= user.usr %>">
                </div>
                <div class="mt-3">
                    <label for="">พาสเวิร์ด</label>
                    <input type="password" name="pwd" id="" class="form-control" value="<%= user.pwd %>">
                </div>
                <div class="mt-3">
                    <label for="">สิทธิ์ใช้งาน</label>
                    <select name="level" id="">
                        <option value="<%= user.level %>" disabled selected><%= user.level %></option>
                        <option value="admin">Admin</option>
                        <option value="user">User</option>
                    </select>
                </div>
                <div class="mt-3">
                    <button type="submit" class="btn btn-primary">SAVE</button>
                </div>
            </div>
        </div>
    </form>

<%- include('footer') %>
